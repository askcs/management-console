extends layout

block navbar
  .navbar.bs-docs-nav
    //a.navbar-brand.navbar-icon.navbar-icon-management-console(href='#/home', title='Home')
    a.navbar-brand.navbar-icon.navbar-icon-management-console(href='#/domains', title='domains')
    ul.nav.navbar-nav
      li
        a.navbar-icon.navbar-icon-domain-overview(href='#/domains', title='Domain overview')
      li
        a.navbar-icon.navbar-icon-domain-information(href='#/domain-information', title='Domain information')
      li
        a.navbar-icon.navbar-icon-logs(href='#/logs', title='Logs')
      li
        a.navbar-icon.navbar-icon-monitors(href='#/monitors', title='Monitors')
      li
        a.navbar-icon.navbar-icon-channels(href='#/channels', title='Channels')
      li
        a.navbar-icon.navbar-icon-settings(href='#/settings', title='Settings')

block topbar
    .topbar.bs-docs-nav
        h1 Management Console
        ul.nav.navbar-nav
            li.domain-selector
                select.form-field-domain-selector
                    option(value='standby') StandBy
                    option(value='standby-test') StandBy Test
                    option(value='standby-dev') StandBy Dev
            li.username
                a(href='#/profile', title='User profile') {{ app.resources.name }}
            li.logout
                a.navbar-icon.navbar-icon-logout(href='#/logout', title='Logout') Logout

block footer
  footer
    .container
      p.text-muted.credit.pull-left
        | Some footer text
        a(href='#')  and a link
      p.text-muted.pull-right(style='margin-top:20px')
        | {{ 'Current version is v%VERSION%. Released: %RELEASED%' | interpolate }}

block icons
  link(rel='apple-touch-icon-precomposed', sizes='144x144', href='icons/apple-touch-icon-144-precomposed.png')
  link(rel='apple-touch-icon-precomposed', sizes='114x114', href='icons/apple-touch-icon-114-precomposed.png')
  link(rel='apple-touch-icon-precomposed', sizes='72x72', href='icons/apple-touch-icon-72-precomposed.png')
  link(rel='apple-touch-icon-precomposed', href='icons/apple-touch-icon-57-precomposed.png')
  link(rel='shortcut icon', href='icons/favicon.png')

